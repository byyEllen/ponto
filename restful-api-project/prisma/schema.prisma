generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int           @id @default(autoincrement())
  nome            String
  email           String        @unique
  senha           String
  pontos          Ponto[]
  departamento    Departamento? @relation(fields: [departamentoId], references: [id])
  departamentoId  Int?
}

model Ponto {
  id          Int      @id @default(autoincrement())
  data        DateTime
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   Int
}

model Departamento {
  id        Int      @id @default(autoincrement())
  nome      String
  usuarios  Usuario[]
}
